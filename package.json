{
    "name": "pomodoro-timer-vscode",
    "displayName": "üçÖ Pomodoro Method (Tomato) Timer ‚è∞",
    "description": "Use the pomodoro method while coding in VSCode to help stay focused, track your progress, and manage your time. Work for 25 minutes and then take a short break, and a longer break after finishing four work sessions.",
    "publisher": "ricksegrest",
    "pricing": "Free",
    "version": "0.1.4",
    "icon": "images/tomatoes.png",
    "license": "UNLICENSED",
    "private": "true",
    "author": {
        "name": "Rick Segrest",
        "email": "rsegrest77+pomodoro_vsc@gmail.com",
        "url": "https://www.ricksegrest.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/rsegrest/pomodoro-vscode.git"
    },
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "pomodoro-timer-vscode.pausePomodoro",
                "title": "Pause Pomodoro"
            },
            {
                "command": "pomodoro-timer-vscode.playPomodoro",
                "title": "Play Pomodoro"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "pomodoroTimerActivityBarContainer",
                    "title": "Pomodoro Timer Tree View Container",
                    "icon": "images/svg_logo.svg"
                }
            ]
        },
        "views": {
            "pomodoroTimerActivityBarContainer": [
                {
                    "id": "pomodoroTimerTreeViewContainer",
                    "name": "PTX Tree View"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.75.0",
        "@typescript-eslint/eslint-plugin": "^5.53.0",
        "@typescript-eslint/parser": "^5.53.0",
        "@vscode/test-electron": "^2.2.3",
        "eslint": "^8.34.0",
        "glob": "^8.1.0",
        "jest-runner-vscode": "^3.0.1",
        "mocha": "^10.2.0",
        "ts-loader": "^9.4.2",
        "typescript": "^4.9.5",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1"
    },
    "dependencies": {
        "jest": "^29.4.3",
        "ts-jest": "^29.0.5",
        "ts-node": "^10.9.1"
    }
}
